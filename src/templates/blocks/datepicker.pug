section(class="datepicker")
  div(class="datepicker__header")
    div(class="datepicker__date") 
       span(class="datepicker__month") #{data.currentMonth}&nbsp;
       span(class="datepicker__year") #{data.currentYear}
    div(class="datepicker__arrows")
      button(class="icon-angle-left" type="button"
        name="arrow-previous-month" disabled
      )
      button(class="icon-angle-right" type="button"
        name="arrow-next-month"
      )

  div(class="datepicker__week")
    each dayName in data.days_of_week
      div(class="datepicker__day-name")= dayName

  div(class="datepicker__week")
    each val, index in data.calendar_days
      button(class="datepicker__day-cell " + 
        (val.isToday ? "is-today " : "") + 
        (val.isAvailable ? "is-available" : "is-disabled")
        disabled=(!val.isAvailable)
        type="button" name="day-of-month"
      )= index
        

  include ./timezone-panel.pug
