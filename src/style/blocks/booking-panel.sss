.booking-panel
  display: flex
  justify-content: center
  width: 100%
  margin: auto

  @media screen and (width <= 1040px)
    flex-direction: column
    align-items: center

.booking-title
  padding: 0 32px
  margin-bottom: 20px
  font-size: 20px
  font-weight: bold
  line-height: 1.2

  @media screen and (width <= 1040px)
    padding: 0
    text-align: center
